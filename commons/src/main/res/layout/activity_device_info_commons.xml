                    android:layout_marginRight="@dimen/dp12"
                    android:layout_toLeftOf="@+id/tvPhoneName"
                    android:layout_toRightOf="@+id/image1"
                    android:text="@string/commons_device_info_phone"
                    android:textColor="@color/commons_device_infotext"
                    android:textSize="@dimen/textsize_20" />

                <com.appplatform.commons.views.AppPlatFormTextView
                    android:id="@+id/tvPhoneName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize_18" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/commons_device_info_item_height"
                android:gravity="center"
                android:paddingLeft="@dimen/dp16"
