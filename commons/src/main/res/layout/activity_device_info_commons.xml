                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="@dimen/commons_device_info_size"
                    android:layout_height="@dimen/commons_device_info_size"
                    android:layout_centerVertical="true"
                    android:src="@drawable/infomation_serial" />

                <com.appplatform.commons.views.AppPlatFormTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp12"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_toLeftOf="@+id/tvPhoneSerial"
                    android:layout_toRightOf="@+id/image2"
                    android:text="@string/commons_device_info_serial"
                    android:textColor="@color/commons_device_infotext"
                    android:textSize="@dimen/textsize_20" />

                <com.appplatform.commons.views.AppPlatFormTextView
                    android:id="@+id/tvPhoneSerial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/textsize_18" />
